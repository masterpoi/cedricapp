<!DOCTYPE html>

<html>
<head>
    <title>Locked</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <style type="text/css">
        body, html, body > div {
            height: 100%;
        }

            body > div {
                display: table;
                margin-left: auto;
                margin-right: auto;
            }

                body > div > div {
                    display: table-cell;
                    vertical-align: middle;
                }
    </style>
</head>
<body>
    <div>
        <div>
            <div class="hero-unit">
                <h1>Locked</h1>
                <p>You <b>really</b> need to unlock this application before usage!</p>
                <input type="message" name="message" size="15" maxlength="200">
                @Html.BeginForm("Unlock", "Unlock")
                { 
                    <input type="text" id="MsgID">
                    <input type="submit" class="dASButton" value="Submit">
                }
                <p>
                    @Html.ActionLink("Unlock", "Unlock", new { msg = MsgID }, new { @class = "btn btn-primary btn-large" })

                </p>
            </div>
        </div>
    </div>

</body>
</html>
